extends ./common/index.pug
include ./common/header.pug
include ./common/sideMenu.pug
include ./common/footer.pug

block append styles 
    link(rel="stylesheet", href="./styles/main.css?after")

block append scripts 
    script(src="./scripts/main.js?after") 

block section
    section
        #section-video 
            video(autoplay muted) 


        #section-stock
            .bg-overlay
                #stock-content
                    h2#stock-title 
                        span 주가 정보
                        span#stock-today
                    .rolling-box 
                        ul.rolling-list
                            li
                                //- name, nowVal, diff, rate
                                - for(let i = 0; i < 4; ++i)
                                    span
                            li
                                - for(let i = 0; i < 4; ++i)
                                    span 


        #section-album
            .bg-overlay
                .album-slick

                #album-video-container.modal
                    #album-video.modal-content
    

        #section-message
            .bg-overlay
            .message-container
              .message-label
                span 응원 메시지를 입력해주세요
              input.message-input

        
            



